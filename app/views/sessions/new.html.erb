<div class="container">

<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="text-center">
<% if flash[:notice] %>
	<div id = "notice"><% flash[:notice] %> </div>
<% end %>
		<h1>Log In</h1>
		<%= link_to "Or create an account", sign_up_path %>
</div>
<%= form_for(:session, url: sessions_path) do |f| %>
	<div class="form-group">
		<%= f.label :email %><br />
		<%= f.text_field :email, :class => "form-control input-lg" %>
	</div>
	<div class="form-group">
		<%= f.label :password %><br />
		<%= f.password_field :password, {:autocomplete =>"off", :class => "form-control input-lg" } %>
	</div>
	<div class="help-block">
	forgot password?
	</div>
	<%= submit_tag "Sign In", class: "btn btn-primary btn-block btn-lg" %>
<% end %>


</div>
</div>
</div>